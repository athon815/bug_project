<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <% if current_user.admin? %>
      <th>Priority</th>
      <% end %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.kind %></td>
        <td><%= request.title %></td>
        <td><%= request.description %></td>
        <td><%= request.user.name %></td>
        <td><%= request.priority if current_user.admin? %></td>
        <td><%= link_to 'Show', request %></td>
        <% if current_user == request.user %>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= link_to 'Assign', new_request_assignment_path(request) if current_user.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>

