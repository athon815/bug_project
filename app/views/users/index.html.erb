<h1>Listing users</h1>


<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %> 
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><button href="#" class="tiny button radius"><%= link_to 'Show', user %></button></td>
        <% if current_user == user %>
        <td><button href="#" class="tiny button radius"><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <% end %>
        <% if current_user == user %>
          <td><button href="#" class="tiny button radius"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?  ' + user.email }, notice: 'Account deleted!' %></button></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



