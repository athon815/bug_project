<h1>Listing assignments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Assigned</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.title %></td>
        <td><%= assignment.description %></td> 
        <td><%= assignment.user.name %></td>
        <td><%= link_to 'Show', request_assignment_path(assignment.request, assignment) %></td> 
        <td><%= link_to 'Edit', edit_request_assignment_path(assignment.request, assignment) %></td>
        <td><%= link_to 'Destroy', [assignment.request, assignment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

